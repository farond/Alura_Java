
public class DesafioFatorial {

	public static void main(String[] args) {
		int fatorial = 0;
		for (int i = 1; i < 11; i++) {
			if(fatorial == 0) {
				fatorial = 1;
			}
			else {
				 fatorial *= i;		         		
			}
			System.out.println("Fatorial de " + i + " = " +fatorial);	           
		}

	}

}
